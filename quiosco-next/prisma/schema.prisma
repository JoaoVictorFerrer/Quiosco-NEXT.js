datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id    Int   @id   @default(autoincrement())
  name  String
  slug  String
  products Producto[]
}

model Producto {
 id    Int   @id   @default(autoincrement())
 name   String
 price  Float
 image  String
 categoryId Int
 category   Category @relation(fields: [categoryId],references: [id])
}